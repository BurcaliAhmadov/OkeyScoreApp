<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#E8CDBEBE">

    <LinearLayout
        android:id="@+id/p1Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#A0D3E3"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText

                android:id="@+id/Player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Player 1"
                android:layout_marginRight="15dp"
                />
            <TextView
                android:id="@+id/P1Netice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="Sum"
                android:textSize="30sp"
                android:maxLines="1"
                android:layout_gravity="center"
                >

            </TextView>




        </LinearLayout>



        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/P1Score1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:hint="Score 1"
                android:maxLines="1"
                android:layout_marginRight="12dp"

                >

            </EditText>

            <EditText
                android:id="@+id/P1Score2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:hint="Score 2"
                android:maxLines="1"
                android:layout_marginRight="15dp"
                >

            </EditText>

            <Button
                android:id="@+id/Button1"
                android:layout_width="0dp"
                android:text="Result"
                android:onClick="button1"
                android:textSize="22sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:background="@android:color/holo_blue_light"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#155171">

            </Button>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/p2Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1Layout"
        android:layout_marginTop="25dp"
        android:background="#E38A8A"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText

                android:id="@+id/Player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textSize="20sp"
                android:maxLines="1"
                android:hint="Player 2"
                android:layout_marginRight="15dp"
                />
            <TextView
                android:id="@+id/P2Netice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="Sum"
                android:textSize="30sp"
                android:maxLines="1"
                android:layout_gravity="center"

                >

            </TextView>


        </LinearLayout>



        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/P2Score1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:hint="Score 1"
                android:maxLines="1"
                android:layout_marginRight="12dp"

                >

            </EditText>

            <EditText
                android:id="@+id/P2Score2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:hint="Score 2"
                android:maxLines="1"
                android:layout_marginRight="15dp"
                >

            </EditText>

            <Button
                android:id="@+id/Button2"
                android:layout_width="0dp"
                android:text="Result"
                android:onClick="button2"
                android:textSize="22sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:background="@android:color/holo_blue_light"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#590E0E">

            </Button>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/p3Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p2Layout"
        android:layout_marginTop="25dp"
        android:background="#E38A8A"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText

                android:id="@+id/Player3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textSize="20sp"
                android:maxLines="1"
                android:hint="Player 3"
                android:layout_marginRight="15dp"
                />
            <TextView
                android:id="@+id/P3Netice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="Sum"
                android:textSize="30sp"
                android:maxLines="1"
                android:layout_gravity="center"
                >

            </TextView>


        </LinearLayout>



        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/P3Score1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Score 1"
                android:textSize="20sp"
                android:maxLines="1"
                android:layout_marginRight="12dp"

                >

            </EditText>

            <EditText
                android:id="@+id/P3Score2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:hint="Score 2"
                android:maxLines="1"
                android:layout_marginRight="15dp"
                >

            </EditText>

            <Button
                android:id="@+id/Button3"
                android:layout_width="0dp"
                android:text="Result"
                android:onClick="button3"
                android:textSize="22sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:background="@android:color/holo_blue_light"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#590E0E">

            </Button>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/p4Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p3Layout"
        android:layout_marginTop="25dp"
        android:background="#9CD591"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText

                android:id="@+id/Player4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Player 4"
                android:layout_marginRight="15dp"
                />
            <TextView
                android:id="@+id/P4Netice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="Sum"
                android:textSize="30sp"
                android:maxLines="1"
                android:layout_gravity="center"
                >

            </TextView>


        </LinearLayout>



        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/P4Score1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Score 1"
                android:maxLines="1"
                android:textSize="20sp"
                android:layout_marginRight="12dp"

                >

            </EditText>

            <EditText
                android:id="@+id/P4Score2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Score 2"
                android:textSize="20sp"
                android:maxLines="1"
                android:layout_marginRight="15dp"
                >

            </EditText>

                <Button
                    android:id="@+id/Button4"
                    android:layout_width="0dp"
                    android:text="Result"
                    android:onClick="button4"
                    android:textSize="22sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:background="@android:color/holo_blue_light"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#22471B">

                </Button>



        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_light"
        android:backgroundTint="#030304"
        android:onClick="delete"
        android:text="Delete All Score"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p4Layout"
        app:layout_constraintVertical_bias="0.6">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>