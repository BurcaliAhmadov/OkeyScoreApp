<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/p1Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText

                android:id="@+id/Player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Player 1"
                android:layout_marginRight="15dp"
                />

            <Button
                android:id="@+id/Button1"
                android:layout_width="0dp"
                android:text="Result"
                android:textSize="22sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:background="@android:color/holo_blue_light"
                android:layout_gravity="center_horizontal">

            </Button>


        </LinearLayout>



        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/P1Score1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:hint="Score 1"
                android:maxLines="1"
                android:layout_marginRight="12dp"

                >

            </EditText>

            <EditText
                android:id="@+id/P1Score2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:hint="Score 2"
                android:maxLines="1"
                android:layout_marginRight="15dp"
                >

            </EditText>
            <TextView
                android:id="@+id/P1Netice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="Sum Score"
                android:textSize="30sp"
                android:maxLines="1"
                android:layout_gravity="center_horizontal"
                >

            </TextView>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/p2Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1Layout"
        android:layout_marginTop="10dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText

                android:id="@+id/Player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textSize="20sp"
                android:maxLines="1"
                android:hint="Player 2"
                android:layout_marginRight="15dp"
                />

            <Button
                android:id="@+id/Button2"
                android:layout_width="0dp"
                android:text="Result"
                android:textSize="22sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:background="@android:color/holo_blue_light"
                android:layout_gravity="center_horizontal">

            </Button>
        </LinearLayout>



        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/P2Score1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:hint="Score 1"
                android:maxLines="1"
                android:layout_marginRight="12dp"

                >

            </EditText>

            <EditText
                android:id="@+id/P2Score2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:hint="Score 2"
                android:maxLines="1"
                android:layout_marginRight="15dp"
                >

            </EditText>
            <TextView
                android:id="@+id/P2Netice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="Sum Score"
                android:textSize="30sp"
                android:maxLines="1"
                android:layout_gravity="center_horizontal"
                >

            </TextView>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/p3Layout"
        android:layout_width="match_parent"
